{
	"name": "fastify-server-poc",
	"version": "1.0.0",
	"description": "Fastify webserver",
	"main": "dist/index.js",
	"scripts": {
		"test": "npm run clean && jest",
		"format": "prettier --write ./src/**/*",
		"tsc": "npm run clean && tsc",
		"clean": "rimraf dist coverage",
		"start:dist": "NODE_ENV=prd node dist/server.js",
		"start:dev": "NODE_ENV=dev ts-node-dev src/index.ts --poll --respawn --transpileOnly",
		"start:prod": "NODE_ENV=dev ts-node-dev src/index.ts --poll --respawn --transpileOnly",
		"eslint": "eslint src/**/*.ts"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/gkampitakis/fastify-server-POC.git"
	},
	"keywords": [
		"fastify",
		"webserver",
		"swagger",
		"health-check"
	],
	"author": "Georgios Kampitakis",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/gkampitakis/fastify-server-POC/issues"
	},
	"homepage": "https://github.com/gkampitakis/fastify-server-POC#readme",
	"dependencies": {
		"dotenv": "^8.2.0",
		"fastify": "^3.0.2",
		"fastify-autoload": "^3.0.3",
		"fastify-cors": "^4.0.0",
		"fastify-oas": "2.5.0",
		"fastify-plugin": "^2.0.1"
	},
	"devDependencies": {
		"@types/dotenv": "^8.2.0",
		"@types/jest": "^26.0.4",
		"@types/node": "^14.0.23",
		"@typescript-eslint/eslint-plugin": "^3.6.1",
		"@typescript-eslint/parser": "^3.6.1",
		"eslint": "^7.4.0",
		"eslint-config-airbnb-base": "^14.2.0",
		"eslint-plugin-import": "^2.22.0",
		"husky": "^4.2.5",
		"jest": "^26.1.0",
		"pino-pretty": "^4.0.1",
		"prettier": "^2.0.5",
		"pretty-quick": "^2.0.1",
		"rimraf": "^3.0.2",
		"ts-jest": "^26.1.2",
		"ts-node-dev": "^1.0.0-pre.51",
		"typescript": "^3.9.6"
	}
}
